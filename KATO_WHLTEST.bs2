' {$STAMP BS2}
' {$PBASIC 2.5}

DEBUG "Commencing wheel test", CR

counter VAR Word

FREQOUT 4, 2000, 3000

DEBUG "Left wheel CCW", CR

FOR counter = 1 TO 122
  PULSOUT 12, 850
  PAUSE 20
NEXT

DEBUG "Left wheel CW", CR

FOR counter = 1 TO 122
  PULSOUT 12, 650
  PAUSE 20
NEXT

DEBUG "Right wheel CCW", CR

FOR counter = 1 TO 122
  PULSOUT 13, 850
  PAUSE 20
NEXT

DEBUG "Right wheel CW", CR

FOR counter = 1 TO 122
  PULSOUT 13, 650
  PAUSE 20
NEXT

DEBUG "Wheel test complete."

END